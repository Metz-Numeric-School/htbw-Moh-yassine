<?php

$port = 8000;
$host = "localhost";

// Start the server with other port
$connexion = @fsockopen($host, $port);
while(is_resource($connexion))
{
    $port ++;
    $connexion = @fsockopen($host, $port);
}

print("Lancement du server ...\n");
exec(sprintf("php -S %s:%d -t ./public", $host, $port));